<%
  sidebar_nav_items = [
    {
      title: 'Profile',
      href: '/settings/profile',
    },
    {
      title: 'Password',
      href: '/settings/password',
    },
  ]
%>

<div class="w-full px-4 py-6">
    <div class="mb-8 space-y-0.5">
        <h2 class="text-xl font-semibold tracking-tight">Settings</h2>
        <p class="text-muted-foreground text-sm">Manage your profile and account settings</p>
    </div>

    <div class="flex flex-col space-y-8 lg:flex-row lg:space-y-0 lg:space-x-12">
        <aside class="w-full max-w-xl lg:w-48">
            <nav class="flex flex-col space-y-1 space-x-0">
              <% sidebar_nav_items.each do |item| %>
                <% active = current_page?(item[:href]) %>

                <%= render "shared/components/ui/button", variant: "ghost", size: "sm", classes: "w-full cursor-pointer justify-start #{'bg-muted' if active}" do %>
                  <%= link_to item[:href], class: "w-full text-left" do %>
                    <%= item[:title] %>
                  <% end %>
                <% end %>
              <% end %>
            </nav>
        </aside>

        <hr class="my-6 md:hidden bg-border h-px w-full shrink-0" />

        <div class="flex-1 md:max-w-2xl">
            <section class="max-w-xl space-y-12"><%= yield %></section>
        </div>
    </div>
</div>
