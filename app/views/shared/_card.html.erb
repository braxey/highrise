<div class="w-full max-w-md rounded-lg bg-white p-8 shadow-lg">
  <div class="flex flex-col items-center gap-6">
    <% if content_for?(:back_url) %>
    <div class="w-full flex justify-start">
      <%= link_to content_for(:back_url),
          class: "inline-flex items-center px-3 py-1 bg-emerald-100 text-emerald-600 rounded-md hover:bg-emerald-200 hover:text-emerald-700 transition-colors duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span><%= content_for(:back_label) || "Back" %></span>
      <% end %>
    </div>
    <% end %>

    <div class="space-y-3 text-center">
      <h1 class="text-2xl font-semibold text-neutral-900">
        <%= content_for(:card_title) || content_for(:title) %>
      </h1>
      <% if content_for?(:description) %>
        <p class="text-sm text-neutral-700"><%= content_for :description %></p>
      <% end %>
    </div>

    <% if notice.present? %>
      <p class="text-sm text-emerald-600"><%= notice %></p>
    <% end %>

    <div class="w-full">
      <%= yield %>
    </div>
  </div>
</div>
