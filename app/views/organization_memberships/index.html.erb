<h1>Members of <%= @organization.name %></h1>

<% if @organization_memberships.any? %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @organization_memberships.each do |membership| %>
        <tr>
          <td><%= membership.user.email_address %></td>
          <td><%= membership.role&.name || "None" %></td>
          <td>
            <%= link_to "Edit", organization_organization_membership_path(@organization, membership) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No members found.</p>
<% end %>

<h2>Pending Invitations</h2>
<% if @invitations.any? %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @invitations.each do |invitation| %>
        <tr>
          <td><%= invitation.email_address %></td>
          <td><%= invitation.role&.name || "None" %></td>
          <td><%= invitation.status.capitalize %></td>
          <td>
            <%= link_to "Edit", edit_organization_organization_invitation_path(@organization, invitation) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No pending invitations.</p>
<% end %>

<%= link_to "Add Member", new_organization_organization_invitation_path(@organization), class: "btn btn-primary" %>
<%= link_to "Back to Organization", organization_path(@organization) %>