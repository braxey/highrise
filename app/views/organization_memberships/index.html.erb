<% content_for :title, "Members of #{@organization.name}" %>

<%= render "organizations/shell", organization: @organization do %>
  <div class="w-full flex justify-start mb-6 items-center space-x-1 text-sm text-neutral-600">
    <% if is_phoenix_admin? %>
      <%= link_to organizations_path, class: "text-emerald-600 hover:underline" do %>
        Organizations
      <% end %>
      <span class="text-neutral-400">›</span>
    <% end %>

    <%= link_to organization_path(@organization), class: "text-emerald-600 hover:underline" do %>
      <%= @organization.name %>
    <% end %>
    <span class="text-neutral-400">›</span>

    <span class="font-medium text-neutral-800">Members</span>
  </div>

  <div class="container mx-auto">
    <!-- Notice -->
    <% if notice.present? %>
      <div class="mb-6 p-4 bg-green-100 text-green-800 rounded-lg shadow shadow-green-200">
        <%= notice %>
      </div>
    <% end %>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Members of <%= @organization.name %></h1>
    </div>

    <!-- Members Table -->
    <% if @organization_memberships.any? %>
      <div class="overflow-x-auto mb-10">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50 text-left text-sm font-semibold text-gray-600">
            <tr>
              <th class="px-6 py-3">Email</th>
              <th class="px-6 py-3">Role</th>
              <th class="px-6 py-3">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
            <% @organization_memberships.each do |membership| %>
              <tr>
                <td class="px-6 py-4"><%= membership.user.email_address %></td>
                <td class="px-6 py-4"><%= membership.role&.name || "None" %></td>
                <td class="px-6 py-4">
                  <div class="flex flex-row items-center justify-start gap-2">
                    <%= link_to "Edit", edit_organization_organization_membership_path(@organization, membership),
                        class: "text-emerald-600 hover:underline" %>

                    <%= link_to "Remove", organization_organization_membership_path(@organization, membership), class: "text-red-600 hover:underline", method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="mb-10 text-gray-600 italic">No members found.</div>
    <% end %>

    <!-- Invitations Table -->
    <% if @invitations.any? %>
      <div class="mb-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Pending Invitations</h2>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50 text-left text-sm font-semibold text-gray-700">
              <tr>
                <th class="px-6 py-3">Email</th>
                <th class="px-6 py-3">Role</th>
                <th class="px-6 py-3">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
              <% @invitations.each do |invitation| %>
                <tr>
                  <td class="px-6 py-4"><%= invitation.email_address %></td>
                  <td class="px-6 py-4"><%= invitation.role&.name || "None" %></td>
                  <td class="px-6 py-4">
                    <div class="flex flex-row items-center justify-start gap-2">
                      <%= link_to "Edit", edit_organization_organization_invitation_path(@organization, invitation.token),
                        class: "text-emerald-600 hover:underline" %>

                      <%= link_to "Revoke", organization_organization_invitation_path(@organization, invitation.token), class: "text-red-600 hover:underline", method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
