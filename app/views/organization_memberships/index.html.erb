<% content_for :title, "Members of #{@organization.name}" %>

<%= render "organizations/shell", organization: @organization do %>
  <div class="w-full flex justify-start mb-6 items-center space-x-1 text-sm text-neutral-600">
    <% if is_phoenix_admin? %>
      <%= link_to organizations_path, class: "text-emerald-600 hover:underline" do %>
        Organizations
      <% end %>
      <span class="text-neutral-400">›</span>
    <% end %>

    <%= link_to organization_path(@organization), class: "text-emerald-600 hover:underline" do %>
      <%= @organization.name %>
    <% end %>
    <span class="text-neutral-400">›</span>

    <span class="font-medium text-neutral-800">Members</span>
  </div>

  <header class="w-full mb-6">
    <h3 class="mb-0.5 text-base font-medium">Members</h3>
    <p class="text-muted-foreground text-sm">Manage the members of <%= @organization.name %></p>
  </header>

  <div
    class="container mx-auto w-full"
    data-controller="organizations--memberships-index"
    data-organizations--memberships-index-current-page-value="<%= @current_page %>"
  >
    <%= render "index_query" %>

    <!-- Members Table -->
    <% if @organization_memberships.any? %>
      <div class="overflow-x-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50 text-left text-sm font-semibold text-gray-700">
            <tr>
              <th class="px-6 py-3 text-left">Email</th>
              <th class="px-6 py-3 text-center">Role</th>
              <th class="px-6 py-3 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
            <% @organization_memberships.each do |membership| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-left"><%= membership.user.email_address %></td>
                <td class="px-6 py-4 text-center"><%= membership.role&.name || "None" %></td>
                <td class="px-6 py-4 text-right">
                  <div class="flex flex-row items-center justify-end gap-2">
                    <%= link_to "Edit", edit_organization_organization_membership_path(@organization, membership),
                        class: "text-emerald-600 hover:underline" %>

                    <%= link_to "Remove", organization_organization_membership_path(@organization, membership), class: "text-red-600 hover:underline", method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="mt-6 flex justify-between items-center text-sm text-gray-700">
        <% if @current_page > 1 %>
          <span class="text-emerald-600 cursor-pointer hover:underline"
            data-action="click->organizations--memberships-index#handlePreviousButton"
          >← Previous</span>
        <% else %>
          <span class="text-gray-400">← Previous</span>
        <% end %>

        <span>
          <%= "Showing #{@start_number} to #{@end_number} of #{@total_memberships}" %>
        </span>

        <% if @current_page != @last_page && @last_page != 0 %>
          <span class="text-emerald-600 cursor-pointer hover:underline"
            data-action="click->organizations--memberships-index#handleNextButton"
          >Next →</span>
        <% else %>
          <span class="text-gray-400">Next →</span>
        <% end %>
      </div>
    <% else %>
      <div>No results found.</div>
    <% end %>
  </div>
<% end %>
