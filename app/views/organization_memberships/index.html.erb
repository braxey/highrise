<% content_for :title, "Members of #{@organization.name}" %>

<div class="container mx-auto px-4 py-12">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Members of <%= @organization.name %></h1>
  </div>

  <!-- Members Table -->
  <% if @organization_memberships.any? %>
    <div class="overflow-x-auto mb-10">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 text-left text-sm font-semibold text-gray-600">
          <tr>
            <th class="px-6 py-3">Email</th>
            <th class="px-6 py-3">Role</th>
            <th class="px-6 py-3">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
          <% @organization_memberships.each do |membership| %>
            <tr>
              <td class="px-6 py-4"><%= membership.user.email_address %></td>
              <td class="px-6 py-4"><%= membership.role&.name || "None" %></td>
              <td class="px-6 py-4">
                <%= link_to "Edit", edit_organization_organization_membership_path(@organization, membership),
                    class: "text-emerald-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="mb-10 text-gray-600 italic">No members found.</div>
  <% end %>

  <!-- Invitations Table -->
  <div class="mb-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Pending Invitations</h2>

    <% if @invitations.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50 text-left text-sm font-semibold text-gray-700">
            <tr>
              <th class="px-6 py-3">Email</th>
              <th class="px-6 py-3">Role</th>
              <th class="px-6 py-3">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
            <% @invitations.each do |invitation| %>
              <tr>
                <td class="px-6 py-4"><%= invitation.email_address %></td>
                <td class="px-6 py-4"><%= invitation.role&.name || "None" %></td>
                <td class="px-6 py-4">
                  <%= link_to "Edit", edit_organization_organization_invitation_path(@organization, invitation.token),
                      class: "text-emerald-600 hover:underline" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-gray-600 italic">No pending invitations.</div>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="flex flex-wrap gap-4 mt-8">
    <%= link_to "Add Member", new_organization_organization_invitation_path(@organization),
        class: "inline-flex items-center px-4 py-2 rounded-lg bg-emerald-600 text-white hover:bg-emerald-700 shadow" %>

    <%= link_to "Back to Organization", organization_path(@organization),
        class: "inline-flex items-center px-4 py-2 rounded-lg bg-gray-200 text-gray-800 hover:bg-gray-300 shadow" %>
  </div>
</div>
