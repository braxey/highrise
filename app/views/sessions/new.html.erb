<% content_for :title, "Log In" %>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
    <h1 class="text-2xl font-bold text-center mb-6">Log In to Your Account</h1>

    <%= render "form" %>

    <div class="mt-4 text-center text-sm text-neutral-700">
      Don't have an account?&nbsp;
      <%= link_to "Sign up", new_user_path, class: "text-emerald-600 hover:text-emerald-700" %>
    </div>

    <div class="mt-4 text-center text-sm text-neutral-700">
      <%= link_to "Forgot password?", new_password_path, class: "text-emerald-600 hover:text-emerald-700" %>
    </div>
  </div>
</div>
