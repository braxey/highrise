<% content_for :title, "Roles" %>

<div class="container mx-auto px-4 py-8">
  <!-- Notice -->
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-100 text-green-800 rounded-lg shadow-md">
      <%= notice %>
    </div>
  <% end %>

  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Roles</h1>
    <%= link_to "New Role", new_role_path, class: "inline-flex items-center px-4 py-2 transition-colors duration-200 cursor-pointer rounded-lg bg-emerald-600 text-white shadow-md hover:bg-emerald-700" %>
  </div>

  <!-- Roles by Scope -->
  <% %w[user organization project].each do |scope| %>
    <% if @roles[scope].present? %>
      <div class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4 capitalize"><%= scope %></h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @roles[scope].each do |role| %>
            <%= render role %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>