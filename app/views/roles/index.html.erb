<% content_for :title, "Roles" %>

<%= render "shared/shells/admin_panel_shell" do %>
  <header class="w-full mb-6">
    <h3 class="mb-0.5 text-base font-medium">Roles</h3>
    <p class="text-muted-foreground text-sm">See all Phoenix roles</p>
  </header>

  <div class="container mx-auto">
    <% %w[user organization project].each do |scope| %>
      <% if @roles[scope].present? %>
        <div class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4 capitalize"><%= scope %></h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @roles[scope].each do |role| %>
              <%= render role %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
