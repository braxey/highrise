<% content_for :title, @organization.name %>

<div class="container mx-auto px-4 py-12">
  <!-- Flash Notice -->
  <% if notice.present? %>
    <div class="mb-8 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800 shadow">
      <%= notice %>
    </div>
  <% end %>

  <!-- Organization Card -->
  <div class="bg-white rounded-xl shadow-md p-8 mb-10">
    <h1 class="text-4xl font-bold text-gray-900 mb-6"><%= @organization.name %></h1>

    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-12 gap-y-6 text-sm text-gray-700">
      <div>
        <dt class="text-gray-500 font-medium uppercase tracking-wide">Active</dt>
        <dd class="mt-1 text-base font-semibold">
          <%= @organization.is_active ? "Yes" : "No" %>
        </dd>
      </div>
      <div>
        <dt class="text-gray-500 font-medium uppercase tracking-wide">Created At</dt>
        <dd class="mt-1 text-base"><%= @organization.created_at.strftime("%B %d, %Y") %></dd>
      </div>
      <div>
        <dt class="text-gray-500 font-medium uppercase tracking-wide">Last Updated</dt>
        <dd class="mt-1 text-base"><%= @organization.updated_at.strftime("%B %d, %Y") %></dd>
      </div>
      <div>
        <dt class="text-gray-500 font-medium uppercase tracking-wide">Total Members</dt>
        <dd class="mt-1 text-base"><%= @organization.users.size %></dd>
      </div>
    </dl>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-wrap gap-3 justify-start">
    <%= link_to "Manage Members", organization_organization_memberships_path(@organization),
        class: "inline-flex items-center px-5 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition shadow" %>

    <%= link_to "Edit Organization", edit_organization_path(@organization),
        class: "inline-flex items-center px-5 py-2.5 rounded-lg bg-amber-500 text-white hover:bg-amber-600 transition shadow" %>

    <%= link_to "Back to Organizations", organizations_path,
        class: "inline-flex items-center px-5 py-2.5 rounded-lg bg-gray-200 text-gray-800 hover:bg-gray-300 transition shadow" %>
  </div>
</div>
